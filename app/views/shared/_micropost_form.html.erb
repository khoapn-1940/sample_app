<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
  <%= f.text_area :content, placeholder: t("chap13.compose") %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <span class="picture">
  <%= f.file_field :picture, accept: Settings.acceptFile %>
  </span>
<% end %>
<% javascript_include_tag :uploadfile %>
